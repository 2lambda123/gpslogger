<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreferenceCompat
        android:key="log_customurl_enabled"
        android:title="@string/log_customurl_title"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:key="autocustomurl_enabled"
        android:title="@string/autosend_enabled"
        app:iconSpaceReserved="false" />

    <Preference
        android:key="log_customurl_url"
        android:singleLine="true"
        android:title="URL"
        app:iconSpaceReserved="false" />

    <Preference
        android:enabled="true"
        android:key="customurl_legend_1"
        android:summary=""
        android:title="@string/parameters"
        app:iconSpaceReserved="false" />

    <Preference
        android:defaultValue=""
        android:key="log_customurl_body"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:title="@string/customurl_http_body"
        app:iconSpaceReserved="false" />

    <Preference
        android:defaultValue=""
        android:hint="Content-Type: application/json\nAuthorization: Basic abcdefg\nApiToken: 12345"
        android:key="log_customurl_headers"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:title="@string/customurl_http_headers"
        app:iconSpaceReserved="false" />

    <Preference
        android:defaultValue="GET"
        android:key="log_customurl_method"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/customurl_http_method"
        app:iconSpaceReserved="false" />

    <Preference
        android:key="log_customurl_basicauth"
        android:title="Basic Authentication"
        app:iconSpaceReserved="false" />

    <Preference
        android:key="customurl_validatecustomsslcert"
        android:title="@string/ssl_certificate_validate"
        app:iconSpaceReserved="false" />

    <Preference
        android:dialogTitle="Install Conscrypt Provider"
        android:key="install_conscrypt_provider"
        android:summary="If you are on older Android versions, or experiencing connectivity issues to services, installing the Conscrypt Provider might help."
        android:title="Install Conscrypt Provider"
        app:iconSpaceReserved="false">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://github.com/mendhak/Conscrypt-Provider/releases" />
    </Preference>

</PreferenceScreen>
